<ul>
    <li>Nome: <%= @matricula.aluno.nome %></li>
    <li>Matricula: <%= @matricula.id %></li>
    <li>Dependente: <%= @matricula.aluno.responsavel %></li>
    <li>Turma: <%= @matricula.turma.sub %></li>
    <li>Série: <%= @matricula.turma.serie %></li>
</ul>
<table border="1">
    <tr>
        <th>Matéria</th>
        <th>1</th>
        <th>2</th>
        <th>3</th>
        <th>4</th>
    </tr>
    <tr>
      <% @matricula.avaliacaos.each do |avaliacao| %>
        <td><%= avaliacao.disciplina.nome %></td>
        <% avaliacao.disciplina.avaliacoes.each do |avaliacao| %>
        	<td><% if avaliacao.matricula == @matricula  %> <%= avaliacao.nota %> <% end %></td>
        <% end %>
      <% end %>
    </tr>
</table>
